<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PhotoBrowser" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <!-- This is the color of the Status bar -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowSharedElementEnterTransition">@transition/photo_enter</item>
        <item name="android:windowSharedElementExitTransition">@transition/photo_exit</item>
    </style>

</resources>
