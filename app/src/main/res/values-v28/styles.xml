<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemePhotoBrowser" parent="AppTheme">
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowSharedElementEnterTransition">@transition/photo_enter</item>
        <item name="android:windowSharedElementExitTransition">@transition/photo_exit</item>
    </style>


    <style name="ThemeCamera" parent="AppTheme">
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

</resources>