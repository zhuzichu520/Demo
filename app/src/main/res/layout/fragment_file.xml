<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.netease.nim.demo.ui.file.viewmodel.ViewModelFile" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/file" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5"
                app:radioIndex="@={viewModel.index}">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="64dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/shape_bg_file_tab_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="默认"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/color_font_primary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="64dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/shape_bg_file_tab_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="微信"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/color_font_primary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="64dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/shape_bg_file_tab_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="本地"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/color_font_primary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:itemBinding="@{viewModel.navItemBind}"
                app:items="@{viewModel.navList}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_file_nav" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_horizontal" />

            <com.netease.nim.demo.view.RecyclerViewEmpty
                android:id="@+id/files"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:splitMotionEvents="false"
                app:itemBinding="@{viewModel.itemBind}"
                app:items="@{viewModel.list}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:lineShowDivider="@{viewModel.dividerMiddle()}"
                tools:listitem="@layout/item_file" />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>