<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <style name="Widget.MyTheme.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="divider">@drawable/divider_horizontal</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.MyTheme.Zhihu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_variant</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">?colorFontPrimary</item>
        <item name="album.dropdown.count.color">?colorFontSecondary</item>
        <item name="album.element.color">@color/white</item>
        <item name="album.thumbnail.placeholder">?colorFontPrimary</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">?colorFontPrimary</item>
        <item name="item.placeholder">?colorFontPrimary</item>
        <item name="item.checkCircle.borderColor">?colorSurface</item>
        <item name="item.checkCircle.backgroundColor">?colorSecondary</item>
        <item name="page.bg">@color/color_background</item>
        <item name="bottomToolbar.bg">@color/color_background_secondary</item>
        <item name="bottomToolbar.preview.textColor">?colorFontPrimary</item>
        <item name="bottomToolbar.apply.textColor">@color/color_primary</item>
        <item name="preview.bottomToolbar.back.textColor">@color/white</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/white</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


</resources>